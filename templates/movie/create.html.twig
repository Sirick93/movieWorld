{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<section id="movies">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h1>New Movie</h1>
                </div>
            </div>
            <div class="col-md-12">
                {{ form_errors(form) }}
                {{form_start(form)}}
                    {{form_row(form.title)}}
                    {{form_row(form.description)}}
                    {{form_row(form.save)}}
                {{form_end(form)}}
            </div>
        </div>
    </div>
</section>
{% endblock %}